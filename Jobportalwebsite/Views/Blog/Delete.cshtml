@model Jobportalwebsite.Models.Blog

<div class="container mt-4">
    <h2>Delete Blog</h2>
    <div class="card">
        <div class="card-body">
            <h3>Are you sure you want to delete this blog?</h3>
            <p><strong>Title:</strong> @Model.Title</p>
            <p><strong>Description:</strong> @Model.Description</p>

            <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
                @Html.AntiForgeryToken()
                <p>Are you sure you want to delete this blog?</p>
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                <a href="@Url.Action("Index", "Blog")" class="btn btn-secondary">Cancel</a>
            </form>


        </div>
    </div>
</div>
