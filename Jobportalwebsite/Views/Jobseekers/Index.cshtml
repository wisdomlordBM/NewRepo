@model IEnumerable<Jobportalwebsite.Models.ApplicationUser>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var applicationUser in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100" style="border-radius: 15px;">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <img src="@Url.Content(applicationUser.ProfilePicturePath)"
                                 alt="Profile Picture" class="img-thumbnail"
                                 style="width: 50px; height: 50px; border-radius: 50%; object-fit: cover; margin-right: 10px;" />
                            <h5 class="mb-0">
                                <strong>Name:</strong> @applicationUser.FirstName @applicationUser.LastName
                            </h5>
                        </div>
                        <p><strong>Email:</strong> @applicationUser.Email</p>
                        <p><strong>Location:</strong> @applicationUser.Address</p>
                        <p><strong>Contact:</strong> @applicationUser.PhoneNumber</p>
                        <p><strong>Gender:</strong> @applicationUser.Gender</p>
                        <p><strong>Country:</strong> <span class="text-truncate">@applicationUser.Country</span></p>

                        <div class="d-flex justify-content-end">
                            <a href="@Url.Action("Details", "Jobseekers", new { email = applicationUser.Email })"
                               class="btn btn-info btn-sm me-2">Details</a>
                            <a href="@Url.Action("Edit", "Jobseekers", new { id = applicationUser.Id })"
                               class="btn btn-warning btn-sm me-2">Edit</a>
                            <form asp-action="Delete" asp-route-id="@applicationUser.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this jobseeker?');">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center">No jobseekers found.</p>
}


