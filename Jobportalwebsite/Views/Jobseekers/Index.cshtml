@model IEnumerable<Jobportalwebsite.Models.Jobseekers>

@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2 class="mb-4 text-center">Manage Jobseekers</h2>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var jobseeker in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100" style="border-radius: 15px;">
                    <div class="card-body">
                        <h5 class="card-title"><strong>Name:</strong> @jobseeker.Name</h5>
                        <p><strong>Email:</strong> @jobseeker.Email</p>
                        <p><strong>Location:</strong> @jobseeker.Location</p>
                        <p><strong>Contact:</strong> @jobseeker.Contact</p>
                        <p><strong>Description:</strong> <span class="text-truncate">@jobseeker.Description</span></p>

                        <div class="d-flex justify-content-end">
                            <!-- Delete Jobseeker -->
                            <form asp-action="Delete" asp-route-id="@jobseeker.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this jobseeker?');">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center">No jobseekers found.</p>
}


