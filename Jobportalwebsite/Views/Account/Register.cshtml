@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.0/jquery.validate.unobtrusive.min.js"></script>

    <script>
        // Enforce numeric input and limit to 11 digits
        document.getElementById("PhoneNumber").addEventListener("input", function (event) {
            const input = event.target;
            input.value = input.value.replace(/[^0-9]/g, ""); // Remove non-numeric characters

            if (input.value.length > 11) {
                input.value = input.value.slice(0, 11); // Limit to 11 digits
            }
        });

        // Validate on blur and show error message below the input
        document.getElementById("PhoneNumber").addEventListener("blur", function () {
            const input = event.target;
            const errorContainer = document.getElementById("PhoneNumberError");

            // Remove previous error message if it exists
            if (errorContainer) {
                errorContainer.remove();
            }

            // Show error if the length is not 11
            if (input.value.length !== 11) {
                const errorMessage = document.createElement("div");
                errorMessage.id = "PhoneNumberError";
                errorMessage.style.color = "red";
                errorMessage.innerText = "Phone number must be exactly 11 digits.";

                // Insert the error message after the input
                input.parentNode.appendChild(errorMessage);
            }
        });
    </script>
}
