@model Jobportalwebsite.Viewmodel.RegistrationViewModel
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewData["Title"] = "Admin Registration";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; padding-top: 50px">
    <div class="card shadow-lg" style="width: 36rem; border-radius: 25px; overflow: hidden;">
        <div class="card-body p-5">
            <div class="text-center mb-4">
                <img src="~/images/icon1.jpg" alt="Admin Logo" style="width: 100px; height: auto;">
            </div>
            <h2 class="card-title text-center mb-4">Admin Registration</h2>

            <form asp-action="Register" method="post">
                <input type="hidden" asp-for="Role" value="Admin" />

                <div class="mb-3">
                    <label for="AdminEmail" class="form-label">Admin Email</label>
                    <input type="email" asp-for="Email" class="form-control" placeholder="Enter your email" required />
                </div>

                <div class="mb-3">
                    <label for="Password" class="form-label">Password</label>
                    <input type="password" asp-for="Password" class="form-control" placeholder="Enter your password" required />
                </div>

                <div class="mb-3">
                    <label for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password" required />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>

                <p class="text-center mt-3">
                    Already registered? <a href="@Url.Action("Login", "Account")" class="text-decoration-none">Go to Login</a>
                </p>
            </form>
        </div>
    </div>
</div>



