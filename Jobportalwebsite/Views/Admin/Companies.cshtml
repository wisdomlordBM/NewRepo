@model IEnumerable<Jobportalwebsite.Models.Company>
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
    ViewData["Title"] = "Manage Companies";
}

<h2 class="mb-4 text-center">Manage Companies</h2>

<div class="row">
    @foreach (var company in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body">
                    <h4 class="card-title text-primary">@company.Name</h4>
                    <p class="mb-2"><strong>Industry:</strong> @company.Industry</p>
                    <p class="mb-2"><strong>Location:</strong> @company.Location</p>
                    <p class="mb-2">
                        <strong>Email:</strong>
                        <a href="mailto:@company.Email">@company.Email</a>
                    </p>
                    <p class="mb-2">
                        <strong>Website:</strong>
                        @if (!string.IsNullOrEmpty(company.WebsiteUrl))
                        {
                            <a href="@company.WebsiteUrl" target="_blank">@company.WebsiteUrl</a>
                        }
                        else
                        {
                            <span>No website provided</span>
                        }
                    </p>
                    <p class="mb-3"><strong>Description:</strong> @company.Description</p>

                    <div class="d-flex justify-content-end">
                        <a href="@Url.Action("DeleteCompany", "Admin", new { id = company.Id })"
                           class="btn btn-danger btn-sm rounded-3 px-4"
                           onclick="return confirm('Are you sure you want to delete this company?')">
                            Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>



