@model IEnumerable<Jobportalwebsite.Models.Application>

@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2 class="mb-4 text-center">Manage Jobseekers</h2>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var application in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100" style="border-radius: 15px;">
                    <div class="card-body">
                        <h5 class="card-title"><strong>Name:</strong> @($"{application.User.FirstName} {application.User.LastName}")</h5>
                        <p><strong>Email:</strong> @application.User.Email</p>
                        <p><strong>Phone:</strong> @application.User.PhoneNumber</p>
                        <p><strong>Location:</strong> @application.User.Address</p>
                        <p><strong>City:</strong> @application.City</p>
                        <p><strong>Description:</strong> @application.Description</p>
                        <p><strong>Date Applied:</strong> <span class="text-truncate">@application.DateApplied</span></p>

                        <div class="d-flex justify-content-end">
                            <a href="@Url.Action("DeleteJobseeker", "Admin", new { id = application.Id })" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this jobseeker?')">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center">No jobseekers found.</p>
}


