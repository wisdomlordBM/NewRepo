@section Scripts {
    <script>
        function toggleStatus(jobseekerId, isActive) {
            $.ajax({
                url: '/Admin/ToggleStatus',  // Action to toggle status
                type: 'POST',
                data: { id: jobseekerId, isActive: isActive },
                success: function (result) {
                    location.reload();  // Reload the page to reflect changes
                },
                error: function (err) {
                    alert('Error toggling status');
                }
            });
        }
    </script>
} *@

