@model IEnumerable<Jobportalwebsite.Models.Application>

@{
    Layout = "~/Views/Shared/_Admin.cshtml";
    ViewData["Title"] = "Manage Jobseekers";
}

<h2 class="mb-4 text-center text-primary">Manage Jobseekers</h2>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var application in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0 rounded-4 h-100">
                    <div class="card-body">
                        <h5 class="card-title text-primary">
                            @($"{application.User.FirstName} {application.User.LastName}")
                        </h5>
                        <p class="mb-2">
                            <strong>Email:</strong>
                            <a href="mailto:@application.User.Email">@application.User.Email</a>
                        </p>
                        <p class="mb-2"><strong>Phone:</strong> @application.User.PhoneNumber</p>
                        <p class="mb-2"><strong>Location:</strong> @application.User.Address</p>
                        <p class="mb-2"><strong>City:</strong> @application.City</p>
                        <p class="mb-3"><strong>Description:</strong> @application.Description</p>
                        <p class="mb-3"><strong>Date Applied:</strong> @application.DateApplied.ToString("MMMM dd, yyyy")</p>

                        <div class="d-flex justify-content-end">
                            <a href="@Url.Action("DeleteJobseeker", "Admin", new { id = application.Id })"
                               class="btn btn-danger btn-sm rounded-3 px-4"
                               onclick="return confirm('Are you sure you want to delete this jobseeker?')">
                                Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center text-muted">No jobseekers found.</p>
}



