@model Jobportalwebsite.Models.Application

@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Delete Jobseeker Profile</h2>
<p>Are you sure you want to delete this jobseeker profile?</p>

<div class="form-group">
    <strong>Name:</strong> @($"{Model.User.FirstName} {Model.User.LastName}")
</div>
<div class="form-group">
    <strong>Email:</strong> @Model.User.Email
</div>
<div class="form-group">
    <strong>Phone:</strong> @Model.User.PhoneNumber
</div>
<div class="form-group">
    <strong>Address:</strong> @Model.User.Address
</div>
<div class="form-group">
    <strong>City:</strong> @Model.City
</div>
<div class="form-group">
    <strong>Description:</strong> @Model.Description
</div>
<div class="form-group">
    <strong>Date Applied:</strong> @Model.DateApplied
</div>

<form asp-action="DeleteJobseeker" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-outline-danger">Delete</button>
    <a asp-action="Jobseekers" class="btn btn-outline-secondary">Cancel</a>
</form>



