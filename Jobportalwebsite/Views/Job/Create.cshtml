@model Jobportalwebsite.Models.Job

<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">Create Job Listing</h1>

    <div class="card shadow-lg p-3" style="max-width: 600px; margin: 0 auto;">
        <div class="card-body">
            <form asp-action="CreateJob" method="post">
                <!-- Hidden CompanyId -->
                <input type="hidden" asp-for="CompanyId" value="@ViewBag.CompanyId" />

                <!-- Job Title -->
                <div class="form-group mb-3">
                    <label for="JobTitle" class="form-label fw-bold">Job Title</label>
                    <input asp-for="JobTitle" class="form-control" placeholder="Enter the job title" required />
                    <span asp-validation-for="JobTitle" class="text-danger"></span>
                </div>

                <!-- Job Description -->
                <div class="form-group mb-3">
                    <label for="Description" class="form-label fw-bold">Job Description</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter a detailed job description" required></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Job Location -->
                <div class="form-group mb-3">
                    <label for="Location" class="form-label fw-bold">Job Location</label>
                    <input asp-for="Location" class="form-control" placeholder="Enter the job location" required />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>

                <!-- Employment Type -->
                <div class="form-group mb-3">
                    <label for="EmploymentType" class="form-label fw-bold">Employment Type</label>
                    <select asp-for="EmploymentType" class="form-control" required>
                        <option value="">Select Employment Type</option>
                        <option value="Full-time">Full-time</option>
                        <option value="Part-time">Part-time</option>
                        <option value="Contract">Contract</option>
                        <option value="Internship">Internship</option>
                    </select>
                    <span asp-validation-for="EmploymentType" class="text-danger"></span>
                </div>

                <!-- Salary -->
                <div class="form-group mb-3">
                    <label for="Salary" class="form-label fw-bold">Salary</label>
                    <input asp-for="Salary" class="form-control" type="number" step="0.01" placeholder="Enter salary" required />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>

                <!-- Image URL -->
                <div class="form-group mb-3">
                    <label for="ImageUrl" class="form-label fw-bold">Image URL</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Enter URL for company or building image" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="d-grid mt-3">
                    <button type="submit" class="btn btn-success btn-lg">Create Job</button>
                </div>

                <!-- Back Button -->
                <div class="d-grid mt-3">
                    <a asp-controller="Job" asp-action="Index" class="btn btn-secondary btn-sm">Back to Job Listings</a>
                </div>
            </form>
        </div>
    </div>
</div>




