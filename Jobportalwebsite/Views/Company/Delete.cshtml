@model Jobportalwebsite.Models.Company
@{
    Layout = "~/Views/Shared/_Company.cshtml";
}
<div >
    <h2>Delete Company Profile</h2>
    <p>Are you sure you want to delete this company profile?</p>

    <div class="form-group">
        <strong>Company Name:</strong> @Model.Name
    </div>
    <div class="form-group">
        <strong>Description:</strong> @Model.Description
    </div>
    <div class="form-group">
        <strong>Location:</strong> @Model.Location
    </div>
    <div class="form-group">
        <strong>Industry:</strong> @Model.Industry
    </div>
    <div class="form-group">
        <strong>Website URL:</strong> @Model.WebsiteUrl
    </div>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
        <button type="submit" class="btn btn-outline-danger">Delete</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </form>
</div>

