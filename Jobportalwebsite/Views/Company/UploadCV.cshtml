@model Jobportalwebsite.Models.UploadCVViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="h4">Upload Your CV</h2>
                </div>
                <div class="card-body">
                    <form asp-action="UploadCV" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="ApplicationId" />

                        <div class="form-group mb-3">
                            <label asp-for="CV" class="form-label">Upload Your CV</label>
                            <input type="file"
                                   asp-for="CV"
                                   class="form-control"
                                   accept=".pdf,.doc,.docx"
                                   aria-describedby="cvHelp" />
                            <small id="cvHelp" class="form-text text-muted">Accepted formats: PDF, DOC, DOCX. Max size: 5MB.</small>
                            <span asp-validation-for="CV" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="reset" class="btn btn-secondary me-2">Clear</button>
                            <button type="submit" class="btn btn-success">Upload</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

